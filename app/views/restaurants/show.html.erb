<div class="container mt-3"><h1>Restaurants n' Reviews</h1>
<h2>Restaurant: <%= @restaurant.name %></h2>
<ul>
<li><%= @restaurant.name  %></li>
<li><%= @restaurant.address %></li>
<li><%= @restaurant.category %></li>
<li>Call: <%= @restaurant.phone_number %></li>
<li>Reviews: <% @restaurant.reviews.each do |review| %>
<%= review.content %>, Rating: <%= review.rating %>/5</li>
<% end %>
</ul>

<%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
<%= link_to "Destroy", @restaurant, method: :delete, data: { confirm: "Are you sure you want to delete this restaurant?"}, class: "btn btn-danger" %>
<%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>
